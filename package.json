{
  "name": "codexdesign",
  "version": "1.0.0",
  "description": "Component generator - from code to Figma designs.",
  "main": "dist/code.js",
  "scripts": {
    "start": "webpack --watch",
    "build:ts": "tsc -p tsconfig.json",
    "build:css": "unocss 'src/**/*.html' 'src/**/*.js' -o dist/styles.css",
    "build:plugin": "webpack --mode production",
    "lint": "eslint --ext .ts,.tsx --ignore-pattern node_modules .",
    "lint:fix": "eslint --ext .ts,.tsx --ignore-pattern node_modules --fix ."
  },
  "author": "Sara Tapusoa",
  "license": "MIT",
  "devDependencies": {
    "@figma/eslint-plugin-figma-plugins": "^0.15.0",
    "@figma/plugin-typings": "^1.93.0",
    "@iconify-json/mdi": "^1.1.66",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "@unocss/preset-icons": "^0.60.2",
    "@unocss/preset-typography": "^0.60.2",
    "@unocss/preset-web-fonts": "^0.60.2",
    "@unocss/webpack": "^0.60.0",
    "css-loader": "^7.1.1",
    "eslint": "^8.57.0",
    "style-loader": "^4.0.0",
    "typescript": "^5.4.5",
    "unocss": "^0.60.0",
    "vite": "^5.2.11"
  },
  "eslintConfig": {
    "extends": [
      "eslint:recommended",
      "plugin:@typescript-eslint/recommended",
      "plugin:@figma/figma-plugins/recommended"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
      "project": "./tsconfig.json"
    },
    "root": true,
    "rules": {
      "@typescript-eslint/no-unused-vars": [
        "error",
        {
          "argsIgnorePattern": "^_",
          "varsIgnorePattern": "^_",
          "caughtErrorsIgnorePattern": "^_"
        }
      ]
    }
  },
  "dependencies": {
    "@octokit/rest": "^20.1.1",
    "@unocss/preset-mini": "^0.60.0",
    "ts-loader": "^9.5.1",
    "webpack": "^5.91.0",
    "webpack-cli": "^5.1.4"
  }
}
